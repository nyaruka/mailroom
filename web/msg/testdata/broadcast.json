    {
        "label": "create broadcast and return id",
        "method": "POST",
        "path": "/mi/msg/broadcast",
        "body": {
            "org_id": 1,
            "user_id": 4,
            "translations": {
                "eng": {
                    "text": "Hello"
                }
            },
            "base_language": "eng",
            "group_ids": [
                10000
            ],
            "contact_ids": [
                10002,
                10003
            ],
            "urns": [
                "tel:+1234567890"
            ],
            "query": "age > 20",
            "optin_id": 30000,
            "template_id": 10000,
            "template_variables": [
                "@contact"
            ]
        },
        "status": 200,
        "response": {
            "id": 30000
        },
        "db_assertions": [
            {
                "query": "SELECT count(*) FROM msgs_broadcast WHERE status = 'P' AND translations-\u003e'eng'-\u003e\u003e'text' = 'Hello' AND base_language = 'eng' AND urns = '{\"tel:+1234567890\"}' AND query = 'age \u003e 20' AND optin_id = 30000 AND template_id = 10000 AND template_variables = '{\"@contact\"}'",
                "returns": 1
            },
            {
                "query": "SELECT count(*) FROM msgs_broadcast_contacts WHERE broadcast_id = 30000",
                "returns": 2
            },
            {
                "query": "SELECT count(*) FROM msgs_broadcast_groups WHERE broadcast_id = 30000",
                "returns": 1
            }
        ],
        "expected_tasks": {
            "batch/1": [
                {
                    "type": "send_broadcast",
                    "payload": {
                        "broadcast_id": 30000,
                        "broadcast_uuid": "01969b47-0583-76f8-ae7f-f8b243c49ff5",
                        "org_id": 1,
                        "status": "P",
                        "translations": {
                            "eng": {
                                "text": "Hello"
                            }
                        },
                        "base_language": "eng",
                        "expressions": true,
                        "optin_id": 30000,
                        "template_id": 10000,
                        "template_variables": [
                            "@contact"
                        ],
                        "group_ids": [
                            10000
                        ],
                        "contact_ids": [
                            10002,
                            10003
                        ],
                        "urns": [
                            "tel:+1234567890"
                        ],
                        "query": "age > 20",
                        "exclusions": {
                            "non_active": false,
                            "in_a_flow": false,
                            "started_previously": false,
                            "not_seen_since_days": 0
                        },
                        "created_by_id": 4
                    }
                }
            ]
        }
    },
